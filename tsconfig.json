{
  "compilerOptions": {
    "baseUrl": ".", // Đặt gốc là thư mục chứa tsconfig.json
    "paths": {
      "@/*": ["src/*"] // '@/' trỏ rõ ràng đến src
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
